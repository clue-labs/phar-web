{% extends "layout.html" %}

{% block title %}{{ vendor.name }} - phar project{% endblock %}

{% block content %}
<h1>{{ vendor.name }}</h1>
<p class="lead">Vendor <em>{{ vendor.name }}</em> has
{% set count=vendor.numberOfPackages %}
{% transchoice count %}
{0} no packages|{1} the following package|]1,Inf] the following %count% packages
{% endtranschoice %}
 listed on <a href="https://packagist.org/packages/{{ vendor.name }}/">packagist.org</a>:</p>

<ul>
{% for package in vendor.namesOfPackages %}
 {# {{ url('package', {vendor: "#{vendor.name}", name: "#{package}"} ) }} --> #}
    <li><a href="../{{ package|escape }}">{{ package|escape }}</a></li>
{% endfor %}
</ul>

{% endblock %}